FROM node:22-alpine

WORKDIR /app

# Install development dependencies
RUN apk add --no-cache python3 make g++

# Copy package files
COPY package*.json ./
COPY tsconfig.json ./

# Install all dependencies (including dev dependencies)
RUN npm install

# Copy source code
COPY src ./src

# Expose port
EXPOSE 3002

# Start development server with hot reload using tsconfig-paths
CMD ["npx", "ts-node-dev", "--respawn", "--transpile-only", "--ignore-watch", "node_modules", "--no-notify", "-r", "tsconfig-paths/register", "src/server.ts"]
